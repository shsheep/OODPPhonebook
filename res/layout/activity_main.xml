<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="oodp.termproject3.MainActivity" >

    <Button
        android:id="@+id/bt_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="bt_reset_Click"
        android:text="Reset" />

    <Button
        android:id="@+id/bt_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="bt_sms_Click"
        android:text="SMS"
        android:width="120dp" />

    <Button
        android:id="@+id/bt_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_sms"
        android:layout_alignLeft="@+id/bt_sms"
        android:onClick="bt_people_Click"
        android:text="People"
        android:width="120dp" />

    <Button
        android:id="@+id/bt_callhistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_sms"
        android:layout_below="@+id/bt_sms"
        android:onClick="bt_callhistory_Click"
        android:text="Call history"
        android:width="120dp" />

</RelativeLayout>
